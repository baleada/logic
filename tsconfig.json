{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "types": [
      "node",
      "dompurify",
      "@sindresorhus/slugify"
    ],
    "typeRoots": [
      "./tests/@types"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "paths": {
      "@*": ["./src/*"],
    },
  },
  "include": [
    "src/**/*",
    "tests/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
