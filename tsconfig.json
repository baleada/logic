{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "typeRoots": [
      "./tests/@types"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
  },
  "include": [
    "src/**/*",
    "tests/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
