{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "types": [
      "node",
      "resize-observer-browser",
      "requestidlecallback",
      "dompurify",
      "@sindresorhus/slugify"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    },
    "include": [
      "tests/**/*"
    ]
  },
}
