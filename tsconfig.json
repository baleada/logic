{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "types": [
      "resize-observer-browser",
      "dompurify"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "lib",
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module":  "commonjs"
    },
    "include": [
      "tests/**/*"
    ]
  },
}
